<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/service_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/common_vertical_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/balance_text"
            android:textColor="@color/black1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/platform_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/test_play_account_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_input_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/charge_10_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_10_text" />

                <TextView
                    android:id="@+id/real_money_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_50_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_50_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_50_text" />

                <TextView
                    android:id="@+id/real_money_50_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_100_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_100_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_100_text" />

                <TextView
                    android:id="@+id/real_money_100_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/charge_200_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_200_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_200_text" />

                <TextView
                    android:id="@+id/real_money_200_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_500_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_500_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_500_text" />

                <TextView
                    android:id="@+id/real_money_500_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_1000_layout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/charge_item_selector"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/charge_1000_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/charge_1000_text" />

                <TextView
                    android:id="@+id/real_money_1000_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/test_play_account_color"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/custom_money_ev"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/charge_item_selector"
                android:hint="@string/custom_money_text"
                android:paddingLeft="5dp"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_input_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="@string/other_pay_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/alipay_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" >

            <TextView
                android:id="@+id/alipay_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/alipay_icon"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:text="@string/alipay_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/alipay_iv"
                android:text="@string/recommend_text"
                android:textColor="@color/pay_recommend_color" />

            <ImageView
                android:id="@+id/alipay_selected_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/selected_pay_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/wxpay_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" >

            <TextView
                android:id="@+id/wxpay_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/tencent_pay_icon"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:text="@string/wxpay_text" />

            <ImageView
                android:id="@+id/wxpay_selected_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/selected_pay_icon"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/charge_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_btn_selector"
            android:text="@string/charge_confirm_text"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/call_service_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/service_phone_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/service_text" />
    </LinearLayout>

</LinearLayout>